{
  "version": 1,
  "settings": {
    "system": {
      "mode": "plane",
      "modes": {
        "plane": {
          "motor_layout": 1,
          "tail_layout": "v",
          "aileron": true,
          "flaps": true
        },
        "heli": {
        },
        "quad": {
          "motor_layout": "x"
        }
      }
    },
    "hardware": {
      "servo_1": 3,
      "servo_2": 4,
      "servo_3": 5,
      "servo_4": 6,
      "I2C": {
        "sda": 8,
        "scl": 9
      }
    },
    "pid": {
      "roll": { "kp": 0.10, "ki": 0.01, "kd": 0.001 },
      "pitch": { "kp": 0.12, "ki": 0.02, "kd": 0.002 }
    },
    "sensors": {
      "imu": {
        "heartbeat": 100,
        "register": "0x68"
      }
    }
  },
  "protocol": {
    "parameters": {
      "system.mode": { "id": "0x0001", "type": "enum" },
      "pid.roll.kp": { "id": "0x1001", "type": "float" },
      "pid.pitch.kp": { "id": "0x1002", "type": "float" },
      "sensors.imu.heartbeat": { "id": "0x2001", "type": "uint16" }
    },
    "messages": {
      "MODE_GET": { "id": "0x0101", "payload": {} },
      "MODE_SET": { "id": "0x0102", "payload": { "mode": "string" } }
    }
  }
}
